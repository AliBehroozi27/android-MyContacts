<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.pkmmte.view.CircularImageView
        android:id="@+id/iv_contact"
        android:layout_width="@dimen/civ_width_item"
        android:layout_height="@dimen/civ_width_item"
        android:layout_marginStart="@dimen/civ_item_margin_by"
        android:layout_marginLeft="@dimen/civ_item_margin_by"
        android:layout_marginTop="@dimen/civ_item_margin_top_lv"
        android:layout_marginBottom="@dimen/civ_item_margin_top_lv"
        android:src="@drawable/ic_person"
        app:border="true"
        app:border_color="@color/cardview_light_background"
        app:border_width="@dimen/civ_border_width"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadow="true" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/et_margin_top"
        android:layout_marginLeft="@dimen/et_margin_top"
        android:textSize="@dimen/text_size_item_lv"
        app:layout_constraintBottom_toBottomOf="@+id/iv_contact"
        app:layout_constraintLeft_toRightOf="@id/iv_contact"
        app:layout_constraintTop_toTopOf="@+id/iv_contact" />

    <ImageView
        android:id="@+id/iv_call"
        android:layout_width="@dimen/iv_width_item"
        android:layout_height="@dimen/iv_width_item"
        android:layout_marginTop="@dimen/civ_item_margin_top_lv"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="@dimen/civ_item_margin_top_lv"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_message"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="@dimen/iv_width_item"
        android:layout_height="@dimen/iv_width_item"
        android:layout_marginTop="@dimen/civ_item_margin_top_lv"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/civ_item_margin_top_lv"
        android:src="@drawable/ic_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>